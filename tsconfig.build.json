{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "sourceMap": false,
    "target": "es6"
  },
  "files": ["./types/index.d.ts", "./lib/index.ts"],
  "include": ["lib/**/*.ts", "register.ts"],
  "exclude": [
    ".github",
    "coverage",
    "node_modules",
    "lib",
    "example.ts",
    "preload.ts"
  ]
}
