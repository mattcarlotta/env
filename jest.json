{
  "testEnvironment": "node",
  "moduleDirectories": ["<rootDir>/tests", "node_modules"],
  "transform": {
    "^.+\\.[t|j]s?$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "<rootDir>/coverage",
    "<rootDir>/lib",
    "<rootDir>/node_modules",
    "<rootDir>/types"
  ],
  "collectCoverageFrom": ["src/**/*.ts"]
}
