{
  "compilerOptions": {
    "diagnostics": true,
    "declaration": false,
    "noEmitOnError": true,
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "files": ["./index.ts"],
  "include": ["**/*.ts", "./types/index.d.ts"],
  "exclude": [
    ".github",
    "coverage",
    "examples",
    "node_modules",
    "lib",
    "tests",
    "compress.ts"
  ]
}
